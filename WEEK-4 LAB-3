package oddevenchecker;
public class OddEvenChecker
{
    public static void main(String[] args) {
        int num = 17;

        if (num % 2 == 0) {
            System.out.println(num + " is even.");
        } else {
            System.out.println(num + " is odd.");
        }
    }
}


