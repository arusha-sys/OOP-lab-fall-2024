*                     *
***********************


package evennumbers;
public class EvenNumbers {
    public static void main(String[] args) {
        int i = 1; // Initialize the loop variable

        while (i <= 20) { 
            if (i % 2 == 0) { 
                System.out.println(i); 
            }
            i++; 
        }
    }
}




